
.tip
  z-index: 2005
  padding: 0

  &.tip-south
    padding-bottom: 5px
  &.tip-east
    padding-right: 5px
  &.tip-north
    padding-top: 5px
  &.tip-west
    padding-left: 5px

.reload-btn
  position: absolute
  top: 0
  right: 0
  z-index: 1000
  
.section
  position: relative

#output
  position: relative
  overflow: auto
  background-color: white

  &.fullScreen
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    z-index: 2000
    zoom: 100% !important
    

#interaction
  .dl-dialog,
  .open-dialog
    position: absolute
    top: 50%
    left: 50%
    width: 500px
    height: 500px
    margin-left: -250px
    margin-top: -250px
    background-color: white
    border: 2px solid black
    border-radius: 10px
    padding: 20px 30px
    box-sizing: border-box
    z-index: 2004

    .close-btn
      line-height: 10px
      padding: 5px

    ul
      padding: 0
      margin: 0

      li
        list-style: none
        padding: 5px 10px

  .open-dialog
    table
      padding: 0
      margin: 0
      tr
        cursor: pointer

        .name
          margin-right: 20px
        .date
          margin-right: 20px

        .delete-btn
          color: #f00;
          font-weight: bold;
          line-height: 11px;
          padding: 9px;
          margin-left: 3px;

          &:hover
            background-color: #ddd

        &:hover
          background-color: #ccc

  .dl-dialog
    text-align: center

    pre
      text-align: left

  .dl-back,
  .open-back
    position: fixed
    top: 0
    bottom: 0
    left: 0
    right: 0
    z-index: 2003
    background-color: #999
    opacity: .5
    cursor: pointer

  .floater
    position: fixed
    bottom: 0
    left: 50%
    margin-left: -300px
    width: 600px
    text-align: center
    z-index: 2001
    background-color: #333
    border-radius: 5px
    color: #ddd

    .minimize
      i
        -webkit-transform: rotate(-45deg)
        zoom: 80%

    &.minimized
      border-radius: 0
      border-top-left-radius: 5px

      .minimize i
        -webkit-transform: rotate(135deg)

    &.fullScreen
      width: 520px
      margin-left: -260px
    
      &.minimized
        left: auto
        right: 0
        width: auto
        margin-left: 0

    .btn
      padding: 6px 6px

    .author-link
      margin-right: 15px

    .glyphicon
      color: white

    input
      border: 2px solid #222;
      padding: 0 5px;
      background-color: #555;
      color: white;
    
    a
      color: white
      font-weight: bold

      &:hover
        text-decoration: none
        color: #ddd

.main
  display: flex
  flex-flow: row
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0

  .mirror
    width: 100%
    height: 100%
    box-sizing: border-box
    resize: none
    border: none
    flex: 1
    display: flex
    flex-direction: column
    position: relative

    .CodeMirror
      top: 0
      left: 0
      right: 0
      bottom: 0
      height: auto
      position: absolute

  > .closed,
  > div > .closed
    display: none

  > div
    flex: 1
    display: flex
    flex-flow: column

    > div
      flex: 1
      display: flex
      box-sizing: border-box
      border: 1px solid black
      flex-direction: column

